<div class = "page-header header" >
<h2>Sign up</h2>
</div>
<hr class="my-4">
<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class= "jumbotron jumbotron-fluid bg-secondary bg-opacity-50 box-format mx-2 mb-5 pb-5">
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "lead" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :username, class: "lead" %><br />
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "lead" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "lead" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :sherpa, class: "lead" %><br />
    <%= f.check_box :sherpa, class: "form-check"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button" %>
  </div>
</div>
<% end %>
<div class= "container-fluid h4">
<%= render "users/shared/links" %>
</div>
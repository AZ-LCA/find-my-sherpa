<div class = "page-header header" >
<h2>Log in</h2>
</div>
<hr class="my-4">
<br/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class= "jumbotron jumbotron-fluid bg-secondary bg-opacity-50 box-format mx-2 mb-5 pb-5">
  <div class="field">
    <%= f.label :email, class: "lead" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "lead" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "form-check" %>
      <%= f.label :remember_me, class: "lead" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button" %>
  </div>
</div>
<% end %>
<div class= "container-fluid h4, link_ul">
<%= render "devise/shared/links" %>
</div>
